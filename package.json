{
  "name": "4m00se",
  "version": "0.12.0",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite dev",
    "dev:expose": "vite dev --host",
    "build:full": "npm run setup-environment && npm run build:app",
    "build:app": "npm run check && npm run build:widget && npm run build:docs && vite build",
    "build:widget": "rollup -c && node scripts/copy-widget.js",
    "preview:app": "vite preview",
    "dev:docs": "vitepress dev docs",
    "build:docs": "vitepress build docs && node scripts/copy-docs.js",
    "preview:docs": "vitepress serve docs",
    "setup-environment": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@picocss/pico": "^2.0.6",
    "@stellar/freighter-api": "^2.0.0",
    "@stellar/stellar-sdk": "^12.2.0",
    "mdsvex": "^0.12.3",
    "pinata": "^0.1.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@sveltejs/adapter-node": "^5.2.2",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/markdown-it": "^14.1.2",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "markdown-it": "^14.1.0",
    "postcss-import": "^16.1.0",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.2",
    "rollup": "^4.20.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-gzip": "^4.0.0",
    "rollup-plugin-svelte": "^7.2.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-preprocess": "^6.0.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.0",
    "vite": "^5.4.4",
    "vitepress": "^1.3.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
